<Window
    x:Class="SAE101.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:SAE101"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWindow1"
    Title="NomDuJeu"
    Width="1250"
    Height="750"
    Closing="StopTout"
    FocusManager.FocusedElement="{Binding ElementName=Canvas}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <FontFamily x:Key="Police">/SAE101;component/police/police.ttf#Minecraft</FontFamily>
    </Window.Resources>
    <Canvas
        x:Name="Canvas"
        Focusable="True"
        KeyDown="ClavierAppui"
        KeyUp="ClavierRelache"
        Visibility="Visible">
        <Rectangle
            x:Name="fond1"
            Canvas.Left="0"
            Width="2481"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Panel.ZIndex="0" />
        <Rectangle
            x:Name="fond2"
            Canvas.Left="2480"
            Width="2481"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="0" />
        <Label
            x:Name="lbDistance"
            Canvas.Left="362"
            Canvas.Top="10"
            Width="526"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            Panel.ZIndex="100"
            Content="0"
            FontFamily="{StaticResource Police}"
            FontSize="36"
            FontWeight="Bold" />
        <Rectangle
            x:Name="sol1"
            Canvas.Left="0"
            Canvas.Bottom="-20"
            Width="2481"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Panel.ZIndex="5" />
        <Rectangle
            x:Name="sol2"
            Canvas.Left="2480"
            Canvas.Bottom="-20"
            Width="2481"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Panel.ZIndex="5" />
        <Rectangle
            x:Name="Joueur"
            Canvas.Left="250"
            Canvas.Bottom="355"
            Width="55"
            Height="35"
            Panel.ZIndex="25"
            RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            x:Name="vague1"
            Canvas.Left="0"
            Canvas.Bottom="375"
            Width="2481"
            Height="30"
            Panel.ZIndex="100">
            <Rectangle.Fill>
                <ImageBrush ImageSource="img/vague.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            x:Name="vague2"
            Canvas.Left="2480"
            Canvas.Bottom="375"
            Width="2481"
            Height="30"
            Panel.ZIndex="100">
            <Rectangle.Fill>
                <ImageBrush ImageSource="img/vague.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Grid x:Name="Menu" Visibility="Visible" Width="1250" Height="750" Panel.ZIndex="500">
            <Canvas
            Width="750"
            Height="750" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-250,0,0,0">
                <Canvas.Background>
                    <ImageBrush ImageSource="/img/transition.png" />
                </Canvas.Background>
            </Canvas>
            <Label
            x:Name="titre"
            Content="FISH"
            FontFamily="{StaticResource Police}"
            FontSize="120"
            Foreground="White" Margin="75,75,0,0" VerticalAlignment="Top" />
            <Label
            x:Name="btnJouer"
            Content="Jouer"
            FontFamily="{StaticResource Police}"
            FontSize="32"
            Foreground="White" MouseLeftButtonUp="Jouer" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="75,-100,0,0" />
            <Label
            x:Name="btnQuitter"
            Content="Quitter"
            FontFamily="{StaticResource Police}"
            FontSize="32"
            Foreground="White"
            MouseLeftButtonUp="Quitter" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="75,100,0,0" />
            <Canvas
            x:Name="record"
            Width="309"
            Height="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="75,500,0,0">
                <Rectangle
                Canvas.Top="10"
                Width="100"
                Height="100">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/img/record.png" Stretch="UniformToFill" />
                    </Rectangle.Fill>
                </Rectangle>
                <Label
                x:Name="lbRecord"
                Canvas.Left="120"
                Canvas.Bottom="0"
                Content="0"
                FontFamily="{StaticResource Police}"
                FontSize="48"
                Foreground="White"
                MouseLeftButtonUp="Quitter" />
            </Canvas>
        </Grid>
    </Canvas>
</Window>
