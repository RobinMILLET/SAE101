<Window
    x:Class="SAE101.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE101"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NomDuJeu"
    Width="1250"
    Height="750"
    Closing="StopTout"
    FocusManager.FocusedElement="{Binding ElementName=Canvas}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Canvas
        x:Name="Canvas"
        Focusable="True"
        KeyDown="ClavierAppui"
        KeyUp="ClavierRelache">
        <Canvas
            x:Name="fond1"
            Width="2480"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
        <Canvas
            x:Name="fond2"
            Canvas.Left="2480"
            Width="2480"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" />
        <Rectangle
            Canvas.Bottom="420"
            Width="1250"
            Height="5"
            Fill="#7F46FDF0" />
        <Label
            x:Name="lbDistance"
            Canvas.Left="10"
            Canvas.Top="10"
            Content="Distance : 0000"
            FontFamily="Arial monospaced for SAP"
            FontSize="36"
            FontWeight="Bold" />
        <Label
            x:Name="lbTemps"
            Canvas.Left="10"
            Canvas.Top="66"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Temps : 0000"
            FontFamily="Arial monospaced for SAP"
            FontSize="36"
            FontWeight="Bold" />
        <Rectangle
            x:Name="Joueur"
            Canvas.Left="250"
            Canvas.Bottom="400"
            Width="70"
            Height="45"
            RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Canvas>
</Window>
