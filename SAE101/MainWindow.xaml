<Window
    x:Class="SAE101.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:SAE101"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MainWindow1"
    Title="NomDuJeu"
    Width="1250"
    Height="750"
    Closing="StopTout"
    FocusManager.FocusedElement="{Binding ElementName=Canvas}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <FontFamily x:Key="Police">/SAE101;component/police/police.ttf#Minecraft</FontFamily>
    </Window.Resources>
    <Canvas
        x:Name="Canvas"
        Focusable="True"
        KeyDown="ClavierAppui"
        KeyUp="ClavierRelache">
        <Canvas
            x:Name="fond1"
            Canvas.Left="0"
            Width="2480"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Panel.ZIndex="0" />
        <Canvas
            x:Name="fond2"
            Canvas.Left="2480"
            Width="2480"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Panel.ZIndex="0" />
        <Label
            x:Name="lbDistance"
            Canvas.Left="362"
            Canvas.Top="10"
            Width="526"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            Panel.ZIndex="100"
            Content="0"
            FontFamily="{StaticResource Police}"
            FontSize="36"
            FontWeight="Bold" />
        <Rectangle
            x:Name="sol1"
            Canvas.Left="0"
            Canvas.Bottom="-20"
            Width="2480"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Panel.ZIndex="5" />
        <Rectangle
            x:Name="sol2"
            Canvas.Left="2480"
            Canvas.Bottom="-20"
            Width="2480"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Panel.ZIndex="5" />
        <Rectangle
            x:Name="Joueur"
            Canvas.Left="250"
            Canvas.Bottom="355"
            Width="55"
            Height="35"
            Panel.ZIndex="25"
            RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            x:Name="vague1"
            Canvas.Left="0"
            Canvas.Bottom="380"
            Width="2480"
            Height="30"
            Panel.ZIndex="100">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/vague.png" />
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle
            x:Name="vague2"
            Canvas.Left="2480"
            Canvas.Bottom="380"
            Width="2480"
            Height="30"
            Panel.ZIndex="100">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/vague.png" />
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>
</Window>
