<Window x:Name="MainWindow1"
    x:Class="SAE101.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE101"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NomDuJeu"
    Width="1250"
    Height="750"
    Closing="StopTout"
    FocusManager.FocusedElement="{Binding ElementName=Canvas}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Canvas
        x:Name="Canvas"
        Focusable="True"
        KeyDown="ClavierAppui"
        KeyUp="ClavierRelache">
        <Canvas
            x:Name="fond1"
            Canvas.Left="0"
            Width="2500"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" Panel.ZIndex="0" />
        <Canvas
            x:Name="fond2"
            Canvas.Left="2479"
            Width="2500"
            Height="750"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Label
            x:Name="lbDistance"
            Canvas.Left="10"
            Canvas.Top="10"
            Content="Distance : 0000"
            FontFamily="Arial monospaced for SAP"
            FontSize="36"
            FontWeight="Bold" Panel.ZIndex="99" />
        <Label
            x:Name="lbTemps"
            Canvas.Left="10"
            Canvas.Top="66"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Temps : 0000"
            FontFamily="Arial monospaced for SAP"
            FontSize="36"
            FontWeight="Bold" Panel.ZIndex="99" />
        <Rectangle
            x:Name="sol1"
            Canvas.Left="0"
            Canvas.Bottom="0"
            Width="2500"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" Panel.ZIndex="2" />
        <Rectangle
            x:Name="sol2"
            Canvas.Left="2480"
            Canvas.Bottom="0"
            Width="2500"
            Height="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Top" Panel.ZIndex="2" />
        <Rectangle
            x:Name="Joueur"
            Canvas.Left="250"
            Canvas.Bottom="355"
            Width="55"
            Height="35"
            RenderTransformOrigin="0.5,0.5" Panel.ZIndex="98">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle
            x:Name="vague1"
            Canvas.Left="0"
            Canvas.Bottom="381"
            Width="2500"
            Height="30" Panel.ZIndex="100" />
        <Rectangle
            x:Name="vague2"
            Canvas.Left="2480"
            Canvas.Bottom="381"
            Width="2500"
            Height="30" Panel.ZIndex="100" />
    </Canvas>
</Window>
